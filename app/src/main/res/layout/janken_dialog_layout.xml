<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="第1回戦"
            android:gravity="center"
            android:layout_weight="1"
            android:id="@+id/battle_num"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="勝敗"
                android:id="@+id/battle_result"
                android:layout_weight="1"
                android:gravity="center"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="勝率"
                android:id="@+id/battle_average"
                android:layout_weight="1"
                android:gravity="center"/>

        </LinearLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="グー"
            android:gravity="center"
            android:onClick="hand"
            android:layout_weight="1"
            android:tag="0"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="チョキ"
            android:gravity="center"
            android:onClick="hand"
            android:layout_weight="1"
            android:tag="1"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="パー"
            android:gravity="center"
            android:onClick="hand"
            android:layout_weight="1"
            android:tag="2"/>


    </LinearLayout>

</LinearLayout>
